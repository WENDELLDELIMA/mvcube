{
  "compilerOptions": {
    "target": "ESNext",              // Gera código moderno (ESNext)
    "module": "ESNext",              // Usa módulos ESM
    "outDir": "./dist",              // Diretório de saída
    "rootDir": "./src",              // Diretório raiz
    "strict": true,                  // Ativa verificações estritas
    "esModuleInterop": true,         // Permite interoperabilidade entre CommonJS e ESM
    "resolveJsonModule": true,       // Permite importar JSON
    "moduleResolution": "node",      // Usa resolução de módulos do Node.js
    "forceConsistentCasingInFileNames": true, // Consistência nos nomes de arquivos
    "skipLibCheck": true             // Ignora checagem de tipos em arquivos de biblioteca
  },
  "include": ["src/**/*.ts"],        // Inclui arquivos TypeScript no diretório "src"
  "exclude": ["node_modules"]        // Exclui a pasta `node_modules`
}
